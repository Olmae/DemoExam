<Page x:Class="DemoEx18032024.Modul1.UserMenu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DemoEx18032024.Modul1"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="UserMenu">

    <Grid  Background="White">
        <Label Content="Меню пользователя" HorizontalAlignment="Center" Margin="0,19,0,0" VerticalAlignment="Top" FontSize="20"/>
        <Button Width="140" Height="40" Content="Создать заявку" HorizontalAlignment="Center" Margin="0,105,0,0" VerticalAlignment="Top" Click="GoToAddReq"/>
        <Button Width="140" Height="40" Content="Редактировать заявку" HorizontalAlignment="Center" Margin="0,168,0,0" VerticalAlignment="Top" Click="GoToEditReq"/>
        <Button Width="140" Height="40" Content="Список заявок" HorizontalAlignment="Center" Margin="0,232,0,0" VerticalAlignment="Top" Click="GoToAllReq"/>
        <Button Width="140" Height="40" Content="Выйти" HorizontalAlignment="Center" Margin="0,347,0,0" VerticalAlignment="Top" Click="ExitAuto"/>
        <Button Width="140" Height="40" Content="Оставить отзыв" HorizontalAlignment="Center" Margin="0,292,0,0" VerticalAlignment="Top" Click="GoAddRating"/>
    </Grid>
</Page>
